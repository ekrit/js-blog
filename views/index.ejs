<!DOCTYPE html>
<html lang="en">
    <%- include("./partials/header.ejs") %>
<body>
    <h1>Welcome to Programming - INDEX</h1>

    <%- include("./partials/nav.ejs") %>

    <div>
        <h2>All the blogs</h2>

        <% if(blogs.length > 0) { %>
            <% blogs.forEach(x=>{ %>

                <h3 class="title"><%= x.title %></h3>
                <p class="snippet"><%= x.snippet %></p>
            
            <% }) %>
        <% }  else { %>
            <h3> There are no blogs to display </h3>
        <% } %>
        
    </div>

</body>
<%- include("./partials/footer.ejs") %>

</html>